<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

    <groupId>com.lundellnet</groupId>
    <artifactId>toolbox-obj</artifactId>
    <packaging>jar</packaging>
    <version>0.0.2-beta</version>
    <name>toolbox-obj</name>

    <properties>
	<java.version>1.8</java.version>
	<maven.version>2.3.2</maven.version>
    </properties>

    <repositories>
	<repository>
	    <id>git2.release</id>
	    <name>git2 release repository</name>
	    <url>https://git2.lundellnet.com:8084/nexus/content/repositories/releases/</url>
	</repository>
	<repository>
	    <id>git2.snapshot</id>
	    <name>git2 snapshot repository</name>
	    <url>https://git2.lundellnet.com:8084/nexus/content/repositories/snapshots/</url>
	</repository>
    </repositories>

    <distributionManagement>
	<repository>
	    <id>lundellnet-git2</id>
	    <name>git2 release repository</name>
    	    <url>https://git2.lundellnet.com:8084/nexus/content/repositories/releases/</url>
	</repository>
	<snapshotRepository>
	    <id>lundellnet-git2</id>
	    <name>git2 snapshot repository</name>
	    <url>https://git2.lundellnet.com:8084/nexus/content/repositories/snapshots/</url>
	</snapshotRepository>
    </distributionManagement>

	<build>
	    <pluginManagement>
		<plugins>
		    <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>${maven.version}</version>
			<configuration>
			    <source>${java.version}</source>
			    <target>${java.version}</target>
			</configuration>
		    </plugin>
		</plugins>
	    </pluginManagement>
	</build>

	<dependencies>
	    <dependency>
		<groupId>com.lundellnet</groupId>
		<artifactId>toolbox-obj-api</artifactId>
		<version>0.0.2-beta</version>
	    </dependency>
	    <dependency>
		<groupId>log4j</groupId>
		<artifactId>log4j</artifactId>
		<version>1.2.17</version>
	    </dependency>
	    <dependency>
		<groupId>junit</groupId>
		<artifactId>junit</artifactId>
		<version>3.8.1</version>
		<scope>test</scope>
	    </dependency>
	</dependencies>
</project>
